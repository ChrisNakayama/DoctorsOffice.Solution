@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Patient

<h2>Add a new Patient</h2>
<hr />
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Birthday)
  @Html.EditorFor(model => model.Birthday)

  //Since we saved the list of doctors inside ViewBag.DoctorId, we can provide that here as a string name.
  @Html.Label("Select doctor")
  @Html.DropDownList("DoctorId")

  <input type="submit" value="Add new patient" class="btn btn-default" />
}

<p>@Html.ActionLink("Show All Doctors", "Index", new {}, new { @class = "btn btn-outline-primary" })</p>